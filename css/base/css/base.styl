@import 'colors.styl'
@import 'mixins.styl'
@import 'icons.styl'
@import url('http://fonts.googleapis.com/css?family=Raleway:400,700,200,100')

mainFont() 
    font-family arial, helvetica, sans-serif
    font-size 6em
    font-weight 700

body.template-24hr
    background-color #222
    color #f15a23
    mainFont()

    .inverted
        background-color #f15a23
        color #222

    #logo
        -webkit-mask url('../../base/images/24hrlogo.png') no-repeat
        background-color colorCloud
        width 104px
        height 36px
        position absolute
        bottom 20px
        right 20px
    #contact
        color colorCloudDark

#contact
    font-size .18em
    position absolute
    left 20px
    bottom 20px
    float left
    opacity 0.5
    transition opacity .20s

    &:before
        margin-top 0px
        display block
        float left
        padding-right 3px
        color #2c5e81
        font-size 1.1em



#logo
    opacity 0.7
    transition opacity .20s

#end
    opacity 0
    &>div 
        margin-top -5px
    &.active
        opacity 1

body.impress-on-init 
body.impress-on-end 
    #contact
        opacity 1
    #logo
        opacity 1

.nowrap
    white-space nowrap

.slide
    opacity 0
    transition opacity .20s

    h1
        line-height 1.1em

.past
    opacity .4

.active, .present
    opacity 1

.future 
    opacity 0

.future.active
    opacity 1


.floatImage
    float left
    padding 20px

.left
    float left

